{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "gulp",
    "isShellCommand": true,
    "args": ["--no-color"],
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "build-all",
            "isBuildCommand": true,
            "showOutput": "always"
        },
        {
            "taskName": "test",
            "isTestCommand": true,
            "showOutput": "always",
            "echoCommand": true,
            "args": [
                "node tests\testrun.js"
            ]
        },
        {
            "taskName": "build-demo",
            "isBuildCommand": true,
            "showOutput": "always"
        }
    ]
}